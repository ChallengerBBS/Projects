@model AllPetsViewModel


<h1>All pets</h1>

<div>
    @if (!Model.PreviousDisabled)
    {
        <a href="/Pets/All?Page=@Model.PreviousPage" class="float-left btn btn-dark ">Previous</a>
        }
        @if (!Model.NextDisabled)
        {

            <a href="/Pets/All?Page=@Model.NextPage" class="float-right btn btn-dark ">Next</a>
        }


    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Type
            </th>
            <th>
                Breed
            </th>
            <th>
                Price
            </th>
            <th>

            </th>
        </tr>
        @foreach (var pet in Model.Pets)
        {
            <tr>
                <td>
                    @pet.Category
                </td>
                <td>
                    @pet.Breed
                </td>
                <td>
                    @pet.Price $
                </td>
                <td class="text-xl-center">
                    <a href="/Pets/Delete/@pet.Id"class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </table>


