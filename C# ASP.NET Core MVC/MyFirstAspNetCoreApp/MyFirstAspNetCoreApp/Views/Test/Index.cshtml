@using MyFirstAspNetCoreApp.Controllers
@model TestInputModel
<h2>Candidate for Junior software developer</h2>
<div class="col-md-4">
    <div class="row">

        <form asp-controller="Test" asp-action="Index" method="post" enctype="multipart/form-data">

            <div class="form-group container-fluid">
                <label asp-for="Names.FirstName"></label>
                <input asp-for="Names.FirstName" class="form-control" />
                <span asp-validation-for="Names.FirstName" class="text-danger  alert-warning"></span>
            </div>

            <div class="form-group container-fluid">
                <label asp-for="Names.LastName"></label>
                <input asp-for="Names.LastName" class="form-control" />
                <span asp-validation-for="Names.LastName" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="Egn"></label>
                <input asp-for="Egn" class="form-control" />
                <span asp-validation-for="Egn" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="University"></label>
                <input asp-for="University" class="form-control" />
                <span asp-validation-for="University" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="YearsOfExperience"></label>
                <input asp-for="YearsOfExperience" class="form-control" />
                <span asp-validation-for="YearsOfExperience" class="text-danger alert-warning"></span>
            </div>

            <div class="form-group container-fluid">
                <label asp-for="CandidateType"></label>
                <select asp-for="CandidateType" class="form-control" asp-items="@Model.AllTypes"></select>
                <span asp-validation-for="CandidateType" class="text-danger alert-warning"></span>
            </div>
            <div class="form-group container-fluid">
                <label asp-for="CV"></label>
                <input asp-for="CV" class="form-control"/>
                <span asp-validation-for="CV" class="text-danger alert-warning"></span>
            </div>


            <hr />

            <input type="submit" value="Candidate" class="btn btn-primary" />
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
 }