@model MyFirstAspNetCoreApp.Controllers.TestInputModel
    <h2>Candidate for Junior software developer</h2>
    <div class="col-md-4">
        <form asp-controller="Test" asp-action="Index" class="form">

            <label asp-for="Names.FirstName"></label>
            <input asp-for="Names.FirstName" class="form-control" />

            <label asp-for="Names.LastName"></label>
            <input asp-for="Names.LastName" class="form-control" />

            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />

            <label asp-for="Egn"></label>
            <input asp-for="Egn" class="form-control" />

            <label asp-for="University"></label>
            <input asp-for="University" class="form-control" />

            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" class="form-control" />

            <label asp-for="YearsOfExperience"></label>
            <input asp-for="YearsOfExperience" class="form-control" />

            <hr />

            <input type="submit" value="Candidate" class="btn btn-primary" />
        </form>
    </div>